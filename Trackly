  </div>  <div id="reaction" class="reaction">ðŸŽ‰ Great job! Keep it up! ðŸ’ª</div>  <script>
    const signupDiv = document.getElementById('signup');
    const dashDiv = document.getElementById('dashboard');
    const reaction = document.getElementById('reaction');

    const savedUser = localStorage.getItem('tracklyUser');
    if (!savedUser) {
      signupDiv.style.display = 'block';
    } else {
      dashDiv.style.display = 'block';
    }

    function signup() {
      const user = document.getElementById('username').value;
      const pass = document.getElementById('password').value;
      if (user && pass) {
        localStorage.setItem('tracklyUser', user);
        localStorage.setItem('tracklyPass', pass);
        signupDiv.style.display = 'none';
        dashDiv.style.display = 'block';
      } else {
        alert('Please fill in both fields');
      }
    }

    function showReaction(msg) {
      reaction.innerHTML = msg;
      reaction.style.display = 'block';
      setTimeout(() => {reaction.style.display = 'none';}, 2000);
    }

    // Exercise & Progress
    function markComplete(type) {
      if (type === 'exercise') {
        localStorage.setItem('exerciseDone', 'true');
        updateProgress();
        showReaction('ðŸ‹ï¸ You completed your workout! Great job!');
      }
    }

    // Water Tracker
    let waterCount = parseInt(localStorage.getItem('waterCount')) || 0;
    document.getElementById('waterCount').innerText = waterCount;

    function addWater() {
      waterCount++;
      localStorage.setItem('waterCount', waterCount);
      document.getElementById('waterCount').innerText = waterCount;
      if (waterCount % 8 === 0) showReaction('ðŸ’§ Hydration hero! You hit your goal!');
      updateProgress();
    }

    function resetWater() {
      waterCount = 0;
      localStorage.setItem('waterCount', 0);
      document.getElementById('waterCount').innerText = 0;
      updateProgress();
    }

    // Notepad
    const notepad = document.getElementById('notepad');
    notepad.value = localStorage.getItem('tracklyNote') || '';

    function saveNote() {
      localStorage.setItem('tracklyNote', notepad.value);
      showReaction('ðŸ“ Note saved!');
    }

    function clearNote() {
      notepad.value = '';
      localStorage.removeItem('tracklyNote');
    }

    // Quotes
    const quotes = [
      "Believe in yourself and all that you are.",
      "You are stronger than you think.",
      "Small steps every day lead to big changes.",
      "Stay consistent and trust the process.",
      "Youâ€™ve got this! Keep going!"
    ];

    function newQuote() {
      const q = quotes[Math.floor(Math.random() * quotes.length)];
      document.getElementById('quote').innerText = q;
    }

    // Progress + Streaks
    let streak = parseInt(localStorage.getItem('streakCount')) || 0;
    document.getElementById('streakCount').innerText = streak;

    function updateProgress() {
      let progress = 0;
      const exerciseDone = localStorage.getItem('exerciseDone') === 'true';
      if (exerciseDone) progress += 50;
      if (waterCount >= 8) progress += 50;

      document.getElementById('progressFill').style.width = progress + '%';

      if (progress === 100) {
        streak++;
        localStorage.setItem('streakCount', streak);
        document.getElementById('streakCount').innerText = streak;
        showReaction(`ðŸ”¥ Perfect day! Streak: ${streak}`);
        // Reset daily tasks for next day
        localStorage.removeItem('exerciseDone');
        localStorage.setItem('waterCount', 0);
      }
    }

    updateProgress();
  </script></body>
</html>
