  <h2>Water Intake</h2>
  <p>Glasses: <span id="waterCount">0</span></p>
  <button onclick="addWater()">+1 Glass</button>
  <button onclick="resetWater()">Reset</button>
</div>

<div class="card">
  <h2>Notepad</h2>
  <textarea id="notepad" rows="5" placeholder="Write your notes..."></textarea>
  <button onclick="saveNote()">Save</button>
  <button onclick="clearNote()">Clear</button>
